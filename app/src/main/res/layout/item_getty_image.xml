<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:clickable="true"
  android:focusable="true"
  android:foreground="?android:attr/selectableItemBackground"
  android:orientation="horizontal"
  android:padding="@dimen/hk_padding_small">

  <com.hrskrs.gettyimagemvp.views.HKImageView
    android:id="@+id/item_gi_image"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/hk_margin_small"
    android:layout_marginRight="@dimen/hk_margin_small"
    android:adjustViewBounds="true"
    android:scaleType="fitXY"
    tools:src="@mipmap/ic_launcher" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <com.hrskrs.gettyimagemvp.views.HKTextView
      android:id="@+id/item_gi_id"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="end"
      tools:text="123" />

    <com.hrskrs.gettyimagemvp.views.HKTextView
      android:id="@+id/item_gi_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="end"
      tools:text="Title" />
  </LinearLayout>

</LinearLayout>